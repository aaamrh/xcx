/* components/classic/music/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.classic-img{
  width: 422rpx;
  height: 422rpx;
  border-radius: 50%;
  margin-top: 60rpx;
}

.player-img{
  position: relative;
  width: 120rpx;
  height: 120rpx;
  bottom: 270rpx;
}

.tag{
  position: relative;
  width: 44rpx;
  height: 128rpx;
  bottom: 160rpx;
  right: 310rpx;
}

.rotation{
  animation: rotation 12s linear infinite;
}

@keyframes rotation{
  from{
    transform: rotateZ(0deg)
  }
  to{
    transform: rotateZ(360deg)
  }
}